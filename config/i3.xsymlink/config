# map caps-lock to ctrl
exec --no-startup-id sleep .3; setxkbmap -option 'caps:ctrl_modifier'
# apply custom mappings
exec --no-startup-id sleep .5; xmodmap ~/.Xmodmap
# start compton
exec --no-startup-id sleep .3; compton --config ~/.config/compton.conf -b
exec_always sleep .1; ~/.config/i3/scripts/gnome-keyring.sh
exec_always sleep .9; ~/.config/i3/scripts/launch_polybar.sh
exec --no-startup-id sleep .3; killall -q /usr/lib/gnome-settings-daemon/gsd-print-notifications
