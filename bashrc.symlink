# Git Prompt
GIT_PROMPT_ONLY_IN_REPO=1
GIT_PROMPT_SHOW_UPSTREAM=1 # show upstream tracking branch
GIT_PROMPT_THEME=Solarized # use theme optimized for solarized color scheme
